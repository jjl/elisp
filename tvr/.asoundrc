#not needed for alsa 1.10 and later.
# {{{default: front

pcm.!default {
    type plug
    slave.pcm "front_dmixer"
}

#also call it front for symmettry
pcm.!front {
    type plug
    slave.pcm "front_dmixer"
}

pcm.front_dmixer  {
    type dmix
    ipc_key 1024
    slave {
        pcm "hw:0,0"
        format s16_LE
        period_time 0
        period_size 1024
        buffer_size 4096
        rate 44100
    }
    bindings {
        0 0
        1 1
    }
}
# }}}
