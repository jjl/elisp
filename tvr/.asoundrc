# {{{control and snoop

ctl.!default {
    type hw
    card 0
}

pcm.mixin {
    type dsnoop
    ipc_key 2048 # must be unique for all dmix plugins!!!!
    ipc_key_add_uid yes
    slave {
        pcm "hw:0,1"
        period_size 1024
        buffer_size 4096
        periods 0
        period_time 0
    }
    bindings {
        0 0
        0 1
    }
}

# }}}
# {{{sub device example

pcm.sub1 {
    type hw
    card 0
    device 0
    subdevice -1
}


